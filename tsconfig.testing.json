{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "types": ["node", "mocha", "mocha-dom", "chai", "chai-dom"],
    "lib": ["ES2022", "DOM"],
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "inlineSourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
